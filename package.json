{
  "name": "m3u-player",
  "version": "0.1.0",
  "description": "Modern IPTV player built with Electron that bypasses CORS limitations",
  "main": "main.js",
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/m3u-player.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/m3u-player/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dev-nocache": "electron . --dev --disable-http-cache --disable-web-security",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clear-cache": "rm -rf node_modules/.cache && npm run dev-nocache"
  },
  "keywords": [
    "m3u",
    "m3u8",
    "iptv",
    "player",
    "electron",
    "hls",
    "streaming",
    "video-player",
    "playlist",
    "cors-bypass"
  ],
  "author": {
    "name": "M3U Player Team",
    "email": "contact@m3uplayer.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "hls.js": "^1.4.12",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.m3uplayer.app",
    "productName": "m3u-player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "examples/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "AudioVideo"
    }
  },
  "main-process": {
    "nodeIntegration": false,
    "contextIsolation": true
  }
}
