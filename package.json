{
  "name": "m3u-player",
  "version": "0.5.0",
  "description": "Modern IPTV player built with Electron that bypasses CORS limitations",
  "main": "main.js",
  "homepage": "https://m3u-player.eu",
  "repository": {
    "type": "git",
    "url": "https://github.com/m3u-player-eu/m3u-player.git"
  },
  "bugs": {
    "url": "https://github.com/m3u-player-eu/m3u-player/issues"
  },
  "scripts": {
    "start": "ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
    "start-quiet": "ELECTRON_DISABLE_SECURITY_WARNINGS=true electron . 2>/dev/null",
    "start-silent": "ELECTRON_DISABLE_SECURITY_WARNINGS=true ELECTRON_NO_ATTACH_CONSOLE=true electron . >/dev/null 2>&1",
    "dev": "ELECTRON_DISABLE_SECURITY_WARNINGS=true electron . --dev",
    "debug": "ELECTRON_DISABLE_SECURITY_WARNINGS=true electron . --dev --inspect",
    "dev-nocache": "ELECTRON_DISABLE_SECURITY_WARNINGS=true electron . --dev --disable-http-cache --disable-web-security",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clear-cache": "rm -rf node_modules/.cache && npm run dev-nocache",
    "lint": "eslint . --ext .js,.html",
    "test": "jest -c jest.config.js",
    "test:m3u": "jest -c jest.m3u.config.js",
    "test:watch": "jest -c jest.m3u.config.js --watch",
    "bench:parser": "jest -c jest.m3u.config.js tests/m3u/parser.bench.spec.ts -i --passWithNoTests",
    "e2e": "npx playwright test"
  },
  "keywords": [
    "m3u",
    "m3u8",
    "iptv",
    "player",
    "electron",
    "hls",
    "streaming",
    "video-player",
    "playlist",
    "cors-bypass"
  ],
  "author": {
    "name": "M3U Player Team",
    "email": "contact@m3u-player.eu"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-typescript": "^7.24.7",
    "@playwright/test": "^1.54.2",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^9.32.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-html-reporters": "^3.1.7",
    "jest-serializer-html": "^7.1.0",
    "playwright": "^1.54.2",
    "png-to-icns": "^1.0.0",
    "sharp": "^0.34.3",
    "svg2img": "^1.0.0-beta.2",
    "to-ico": "^1.1.5",
    "typescript": "^5.6.2",
    "whatwg-fetch": "^3.6.20"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "electron-store": "^8.1.0",
    "hls.js": "^1.4.12",
    "node-cron": "^3.0.3",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "eu.m3u-player.app",
    "productName": "m3u-player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "examples/**/*"
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "AudioVideo",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "main-process": {
    "nodeIntegration": false,
    "contextIsolation": true
  }
}
